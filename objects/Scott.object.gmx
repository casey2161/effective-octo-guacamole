        <arguments>
          <argument>
            <kind>1</kind>
            <string>{
    if (room &gt; house_room &amp;&amp; global.paused) exit;
    var lr, ud;
    
    var vel = 8;
    if (inv_get("boots") &gt;= 1) {
        vel = 16;
    }
    
    if (self.energy &gt; self.max_energy) {
        self.energy = self.max_energy;
    }
    
    if (true) {
        lr = keyboard_check(ord('D')) - keyboard_check(ord('A')) 
        ud = keyboard_check(ord('S')) - keyboard_check(ord('W'));
    } else {
        lr = x - self.oldx;
        ud = y - self.oldy;
        self.oldx = x;
        self.oldy = y;
    }
    
    if (lr != 0 || ud != 0) {
            audio_play_sound(snd_walk, 2, 0);
            self.walkdown = self.walkdowncooldown;
    }
    var newx = x + lr * vel;
    var newy = y + ud * vel;
    
    //object collision
    if (place_free(newx, newy)) {
        x = newx;
        y = newy;
    }
    depth = -y;
    
    //room collision
    if (x &lt; 0 + sprite_width/2) {
        x = 0 + sprite_width/2;
    }
    if (y &lt; 0 + sprite_height / 2) {
        y = 0 + sprite_height / 2;
    }
    if (x &gt;= room_width - sprite_width/2 * image_xscale ) { //hacky fix for walking off screen
        x = room_width - sprite_width/2 * image_xscale;
    }
    if (y &gt; room_height - sprite_height/2) {
        y = room_height - sprite_height/2;
    }
    
    //face directions
    if (lr &gt; 0) {
        sprite_index = walkRight;
        self.dir = 2;
    } else if (lr &lt; 0) {
        sprite_index = walkLeft;
        self.dir = 2;
    } else if (ud &gt; 0) {
        sprite_index = walkFront;
        self.dir = 1;
    } else if (ud &lt; 0) {
        sprite_index = walkBack;
        self.dir = 3;
    } else if (self.dir == 0) {
        sprite_index = idleLeft;
    } else if (self.dir == 1) {
        sprite_index = idleFront;
    } else if (self.dir == 2) {
        sprite_index = idleRight;
    } else if (self.dir = 3) {
        sprite_index = idleBack;
    } else {
        if (sprite_index == walkFront) {
            sprite_index = idleFront;
        } else if (sprite_index == walkRight) {
            sprite_index = idleRight;
        } else if (sprite_index == walkLeft) {
            sprite_index = idleLeft;
        } else if (sprite_index == walkBack) {
            sprite_index = idleBack;
        }
    }

    if (!self.hasBook)
        exit;
        
    //bullet firing
    var dir, make_obj;
    make_obj = true;
    if (keyboard_check(vk_left)) {
        dir = 180;
        show_debug_message(string(self.energy));
    } else if (keyboard_check(vk_up)) {
        dir = 90;
    } else if (keyboard_check(vk_right)) {
        dir = 0;
    } else if (keyboard_check(vk_down)) {
        dir = 270;
    } else {
        make_obj = false;
    }

    if (make_obj &amp;&amp; self.cooldown &lt; 0 &amp;&amp; self.energy &gt;= 5) {
        self.cooldown = self.fire_rate;
        inst = instance_create(x, y, bullet);
        audio_play_sound(snd_shoot1, 1,0);
        self.energy -= 5;
        with (inst) {
            speed = 15;
            oldvel = speed;
            direction = dir;
            image_angle = dir;
        }
    }
    
    if (self.reload == 0) {
        self.energy += 1;
        self.reload = 30;
    }
    
    //timers
    self.reload -= 1;
    self.cooldown -= 1;
    self.walkdown -= 1; 
    
}
</string>
